{
  "name": "number-munchers",
  "homepage": "http://msaperst.github.io/number-munchers",
  "version": "0.1.0",
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "lines": 95
      }
    },
    "coverageReporters": [
      "lcov",
      "text",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/index.jsx",
      "!src/__tests__/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "junit.xml"
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "owasp-dependency-check": "^0.0.18",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "react-swipeable": "^6.2.0",
    "web-vitals": "^2.1.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "owasp": "owasp-dependency-check --scan package-lock.json --project 'number-muncher' -f HTML JSON",
    "test": "react-scripts test --coverage --testPathIgnorePatterns __tests__",
    "test:ci": "react-scripts test --coverage --watchAll=false --testPathIgnorePatterns __tests__",
    "selenium": "jest src/__tests__/*.js",
    "lint": "eslint ./src/",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "chromedriver": "^94.0.0",
    "enzyme": "^3.11.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "geckodriver": "^2.0.4",
    "gh-pages": "^3.2.3",
    "jest-junit": "^13.0.0",
    "prettier": "^2.4.1",
    "selenium-webdriver": "^3.6.0"
  }
}
